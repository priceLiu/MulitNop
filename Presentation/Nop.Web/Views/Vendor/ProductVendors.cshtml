@model IList<VendorModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    
    <div class="vendors">
        @if (Model.Count == 1)
        {
            @T("Products.Vendor")<text>:</text>
        }
        else
        {
            @T("Products.Vendors")<text>:</text>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })">@item.Name</a>
            if (i != Model.Count - 1)
            {
            <text>,</text>
            }
        }
    </div>
}