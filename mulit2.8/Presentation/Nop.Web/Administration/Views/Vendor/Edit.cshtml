@*add by hz full page*@
@model VendorModel
@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Vendors.EditVendorDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "vendor-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Vendors.EditVendorDetails") - @Model.Name @Html.ActionLink("(" + T("Admin.Catalog.Vendors.BackToList") + ")", "List")
        </div>
        <div class="options">
            <input type="submit" value="@T("Admin.Common.Preview")" onclick="javascript:OpenWindow('@Url.RouteUrl("Vendor", new { vendorId = Model.Id, SeName = "" })', 800, 600, true); return false;" class="t-button" />
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
            @if(!Model.IsVendorManager)
            {
                <span id="vendor-delete" class="t-button">@T("Admin.Common.Delete")</span>
            }
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("vendor-delete")